{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "strict": true,
    "removeComments": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/renderer"]
}
